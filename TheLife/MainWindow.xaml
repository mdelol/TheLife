<Window x:Class="TheLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Loaded="MainWindow_OnLoaded"
        xmlns:local="clr-namespace:TheLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350">
    <Grid>
        <Canvas x:Name="myCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Aqua"></Canvas>
        <Label x:Name="fps" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
    </Grid>
</Window>
